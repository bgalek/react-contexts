{
    "name": "@bgalek/react-contexts",
    "description": "Useful, generic react contexts for everyday use.",
    "author": "bgalek",
    "type": "module",
    "main": "./dist/react-contexts.umd.cjs",
    "module": "./dist/react-contexts.js",
    "types": "./dist/react-contexts.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "start": "vite",
        "build": "tsc && vite build",
        "test": "vitest",
        "lint": "eslint --ext .ts,.tsx --fix src && prettier --ignore-unknown src --write",
        "prepare": "husky install"
    },
    "peerDependencies": {
        "react": "^16.8.0"
    },
    "devDependencies": {
        "@babel/core": "^7.20.5",
        "@testing-library/dom": "^8.19.0",
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^13.4.0",
        "@testing-library/user-event": "^14.4.3",
        "@types/node": "^18.11.9",
        "@types/react": "16.14.34",
        "@typescript-eslint/eslint-plugin": "^5.45.0",
        "@vitejs/plugin-react": "2.2.0",
        "babel-loader": "^8.3.0",
        "eslint": "^8.28.0",
        "eslint-config-prettier": "^8.5.0",
        "husky": "^8.0.2",
        "jsdom": "^20.0.3",
        "lint-staged": "^13.0.4",
        "prettier": "^2.8.0",
        "react": "18.2.0",
        "typescript": "4.9.3",
        "vite": "3.2.4",
        "vite-plugin-dts": "^1.7.1",
        "vite-plugin-eslint": "^1.8.1",
        "vitest": "^0.25.3"
    },
    "repository": "https://github.com/bgalek/react-contexts",
    "license": "MIT",
    "exports": {
        ".": {
            "import": "./dist/react-contexts.js",
            "require": "./dist/react-contexts.umd.cjs"
        }
    },
    "lint-staged": {
        "*": "npm run lint"
    }
}
